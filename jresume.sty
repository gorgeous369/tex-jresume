% {<幅>}{<テキスト>}
%
% <テキスト> を <幅> の長さに均等割付する。
\def\均等割付#1#2{%
  \leavevmode
  \hbox to #1{%
    \@tfor\@tempa:=#2\do{\@tempa\hfil}%
    \unskip}}

% {<年>}{<月>}{<日>}
%
% \西暦 または \和暦の宣言に応じて、
% 与えられた年月日の年を西暦または和暦に変換する。
\def\年#1#2#3{
  \ifbool{西暦}{#1}{
    \ifboolexpr{
      test {\ifnumcomp{#1}{=}{1989}} and
      test {\ifnumcomp{#2}{=}{1}} and
      test {\ifnumcomp{#3}{<}{8}}
    }{昭和 64 }{
      \ifnumcomp{#1}{<}{1989}{昭和 \number\numexpr#1-1925\relax{} }{
        \ifnumcomp{#1}{=}{1989}{平成元}{
          \ifboolexpr{
            test {\ifnumcomp{#1}{<}{2019}} or
            ( test {\ifnumcomp{#1}{=}{2019}} and test {\ifnumcomp{#2}{<}{5}} )
          }{平成 \number\numexpr#1-1988\relax{} }{
            \ifnumcomp{#1}{=}{2019}{令和元}{
              令和 \number\numexpr#1-2018\relax{} }}}}}}}

% {<年>}{<月>}{<日>}
%
% \西暦 または \和暦の宣言に応じて、
% 与えられた年月日を西暦または和暦に変換する。
\def\年月日#1#2#3{
  \年{#1}{#2}{#3}年 #2 月 #3 日}

% {<年>}
%
% \西暦 または \和暦の宣言に応じて、与えられた年を西暦または和暦に変換する。
%
% 1989 年に対応する和暦の元号は 2 つあるため、<年> が和暦の場合
% （<年> が 1 または 2 で始まらない場合）そのまま出力することで
% 「昭和 64」を出力できるようにする。
\def\maybe和暦#1{%
  \edef\@tempa{\expandafter\@car#1tail\@nil}
  \ifboolexpr{
    bool {西暦}
    or
    not
    (
    test {\expandafter\ifstrequal\expandafter{\@tempa}{1}}
    or
    test {\expandafter\ifstrequal\expandafter{\@tempa}{2}}
    )
  }{#1}{\ifnumcomp{#1}{<}{1989}{昭和 \number\numexpr#1-1925\relax}{
      \ifnumequal{#1}{1989}{平成元}{平成 \number\numexpr#1-1988\relax}}}}

