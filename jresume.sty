% 以下のマクロを定義する。
%
% \現住所郵便番号{###}{####}
% \現住所{<住所>}{<よみ>}
% \現住所固定電話{##}{####}{####}
% \現住所携帯電話{###}{####}{####}
% \現住所電子メール{<メールアドレス>}
% \連絡先郵便番号{###}{####}
% \連絡先{<住所>}{<よみ>}
% \連絡先固定電話{##}{####}{####}
% \連絡先携帯電話{###}{####}{####}
% \連絡先電子メール{<メールアドレス>}
\def\jr@def@address@macros#1{
  \csgdef{#1郵便番号}##1##2{
    \csgdef{jr@#1@郵便番号}{##1--##2}}

  \csgdef{#1}##1##2{
    \csgdef{jr@#1}{##1}
    \csgdef{jr@#1@よみ}{##2}}

  \csgdef{#1固定電話}##1##2##3{
    \csgdef{jr@#1@固定電話}{##1--##2--##3}}

  \csgdef{#1携帯電話}##1##2##3{
    \csgdef{jr@#1@携帯電話}{##1--##2--##3}}

  \csgdef{#1電子メール}##1{
    \csgdef{jr@#1@電子メール}{##1}}
}
\foreach \x in {現住所,連絡先} {
  \expandafter\jr@def@address@macros\expandafter{\x}
}

